{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "surveys": {
      ".read": true,
      ".indexOn": ["authorId"],
      "$surveyId": {
        ".write": "auth != null && (data.child('authorId').val() === auth.uid || !data.exists())"
      }
    },
    "responses": {
      "$surveyId": {
        ".read": "auth != null",
        ".write": true
      }
    }
  }
}
